<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/card_view_plyocardio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#FFF"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/plyocardio_exercice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. EXERCICE ONE"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/colorPrimaryDark"
            android:padding="8dp"/>

        <Button
            android:id="@+id/plyocardio_video"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_alignBaseline="@+id/plyocardio_exercice_title"
            android:text="WATCH VIDEO"
            android:layout_alignParentRight="true"/>


        <TextView
            android:id="@+id/plyocardio_exercice_desc"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plyocardio_exercice_title"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>